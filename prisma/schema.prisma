generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Airline {
  id        Int      @id @default(autoincrement())
  name      String
  iataCode  String   @unique
  countries CountryCoverage[]
}

model CountryCoverage {
  id         Int      @id @default(autoincrement())
  country    String
  airline    Airline  @relation(fields: [airlineId], references: [id])
  airlineId  Int
}